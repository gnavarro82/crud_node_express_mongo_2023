{{#if tasks}}
  <table class="table table-bordered table-hover table-dark">
    <thead>
      <tr>
        <th>NÂ°</th>
        <th>Title</th>
        <th>Description</th>
        <th>Operations</th>
      </tr>
    </thead>
    <tbody>
      {{#each tasks}}
        <tr>
          <td>{{@index}}</td>
          <td><strong>{{title}}</strong></td>
          <td>{{description}}</td>
          <td>
            {{#if done}}
              <a
                class="btn btn-success"
                href="/toggleDone/{{_id}}"
              >Hecho</a>
            {{else}}
              <a class="btn btn-dark" href="/toggleDone/{{_id}}">
                Restaurar
              </a>
            {{/if}}
            <a href="/delete/{{_id}}" class="btn btn-danger">
              Eliminar
            </a>
            <a href="/edit/{{_id}}" class="btn btn-info">
              Editar
            </a>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
{{else}}
  <div class="h-100 d-flex align-items-center justify-content-center">
    <div class="text-center text-white">
      <h1 class="text-light">No Hay Tareas</h1>
      <img src="/icons/empty.svg" class="w-75" />
    </div>

  </div>
{{/if}}




